@code {

    [Parameter]
    public string OutputFile { get; set; }
}

<div class="contain">
    @if (!string.IsNullOrEmpty(OutputFile))
    {
        <a href="@OutputFile" download="logs.txt" class="download-button">Download pairing logs</a>
    }
</div>

<style>
.contain {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
}
.download-button {
    background-color: #012169;
    color: white;
    padding: 10px 20px;
    text-align: center;
    display: inline-block;
    font-size: 18px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 4px;
}
</style>