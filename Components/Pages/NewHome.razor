@page "/home"
<head>
    <style>
        body {
            background-image: url('https://i.imgur.com/lLvtBr9.jpeg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            color: white; /* Ensure text is readable over the background */
        }
        .text {
            font-family: 'Open Sans', sans-serif;  /* not updating */
            color: #012169;
            text-align: center;
        }
        .welcome-box {
            background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white */
            padding: 50px;
            border-radius: 10px;
            width: 100%;
            max-width: 400px;
            text-align: center;
            color: black; /* Ensure text is readable inside the welcome box */
        }
        .welcome-button {
            background-color: #00539b; /* Duke blue */
            color: white;
        }
        .container img {
            max-width: 25%; /* Adjust this percentage as needed */
            height: auto; /* Maintains aspect ratio */
            display: block;
        }
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .row {
            width: 100%; /* Ensure rows take full width */
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <img src="https://static.wixstatic.com/media/e9fa2c_5756d22ef1ee4d8ab96d62a6d21a1396~mv2.png/v1/fill/w_774,h_774,al_c,q_90,usm_0.66_1.00_0.01,enc_auto/BlueDevilBridges.png" class="img-fluid" alt="Blue Devil Bridges">
        </div>
        <div class="row mt-3 ">
            <div class="welcome-box">
                <h1 class="text">Welcome</h1>
               <a href="newpair" class="btn welcome-button">Login with Duke Credentials </a>
            </div>
        </div>
    </div>
</body>